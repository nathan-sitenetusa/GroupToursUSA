<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AdvancedFragment">

    <Button
        android:id="@+id/btnClearCheckIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clearButtonText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnDeletePeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/deleteButtonText"
        app:layout_constraintStart_toStartOf="@+id/btnClearCheckIn"
        app:layout_constraintTop_toBottomOf="@+id/btnClearCheckIn"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/btnTextAllPeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text All"
        app:layout_constraintStart_toStartOf="@+id/btnDeletePeople"
        app:layout_constraintTop_toBottomOf="@+id/btnDeletePeople"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>